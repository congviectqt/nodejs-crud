<% if(error) { error.forEach(item => { %>
<p class="alert alert-danger"><%= item.msg %></p>
<% }); } %>

<form action="/<%= varForm.actionForm; %>" method="post">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Name</label>
    <input
      type="text"
      name="name"
      class="form-control"
      aria-describedby="name"
      value="<%= varForm.name %>"
    />
  </div>
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Description</label>
    <textarea
      name="description"
      class="form-control"
      aria-describedby="description"
    >
  <%= varForm.description %></textarea
    >
  </div>
  <div class="mb-3 form-check">
    <label>Trạng thái</label>
    <input
      type="checkbox"
      name="status"
      class="form-check-input"
      id="exampleCheck1"
    />
  </div>
  <% if(varForm.id){ %>
  <input type="hidden" name="id" value="<%= varForm.id %>" />
  <% } %>
  <button type="submit" name="submit" value="submit" class="btn btn-primary">
    Submit
  </button>
</form>
