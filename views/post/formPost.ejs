<% if(error) { error.forEach(item => { %>
<p class="alert alert-danger"><%= item.msg %></p>
<% }); } %>
<form action="/<%= actionForm; %>" method="post">
  <div class="mb-3">
    <label class="form-label">Title</label>
    <input
      type="text"
      name="title"
      class="form-control"
      aria-describedby="title"
      value="<%= varForm.title %>"
    />
  </div>
  <div class="mb-3">
    <select class="form-select" name="category_id">
      <% listCategory.forEach((item)=> { %>
      <option value="<%= item._id %>"><%= item.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="mb-3">
    <label class="form-label">Short description</label>
    <textarea
      name="short_description"
      class="form-control editor-tinymce"
      aria-describedby="description"
    >
  <%- varForm.short_description %></textarea
    >
  </div>
  <div class="mb-3">
    <label class="form-label">Description</label>
    <textarea
      name="description"
      class="form-control editor-tinymce"
      aria-describedby="description"
    >
  <%- varForm.description %></textarea
    >
  </div>
  <div class="mb-3 form-check">
    <label>Trạng thái</label>
    <input type="checkbox" name="status" class="form-check-input"
    id="exampleCheck1" <%- varForm.status == true ? 'checked' : '' %> />
  </div>
  <% if(varForm.id){ %>
  <input type="hidden" name="id" value="<%= varForm.id %>" />
  <% } %>
  <button type="submit" name="submit" value="submit" class="btn btn-primary">
    Submit
  </button>
</form>
